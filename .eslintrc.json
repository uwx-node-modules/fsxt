{
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    },
    "env": {
      "node": true, // just in case
      "es6": true, // let, const, ``...
      "mocha": true
    },
    "extends": ["eslint:recommended", "google"],
    "rules": {
        "indent": [
            "error",
            2,
            {
                "SwitchCase": 1
            }
        ],
        "linebreak-style": [
            "off"
        ],
        "object-curly-spacing": [
            "off"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": 0,
        "require-jsdoc": "off",
        "valid-jsdoc": "off",
        "max-len": "off",
        "curly": "off",
        "arrow-parens": "off",
        "comma-dangle": "off"
    }
}
